<!-- Button trigger modal -->
@model ProgrammersBlog.Entities.Dtos.UserUpdateDto

<!-- Modal -->
<div class="modal fade"  tabindex="-1"  aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><span class="fas fa-edit"></span>Update user</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" >
                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none"> </div>
                <form asp-action="Update" id="form-user-update">
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName" placeholder="Please enter username!" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="Please enter email!" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                   
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Please enter phone nmber!" />
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture"></label>
                        <input asp-for="Picture" type="hidden"/>
                        <img class="my-image" src="~/img/@Model.Picture" alt="@Model.UserName" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" placeholder="Please upload your image!" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="fas fa-times"></span>Cancel</button>
                <button type="button" class="btn btn-primary" id="btnUpdate"> <span class="fas fa-save"></span>Save changes</button>
            </div>
        </div>
    </div>
</div>