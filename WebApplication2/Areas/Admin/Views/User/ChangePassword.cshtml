@model ProgrammersBlog.Entities.Dtos.UserPasswordChangeDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Change Password";
}
<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card-header">
            <h4 class="text-center"><span class="fas fa-edit"></span>Change Password</h4>
            <div class="card-body">
                <form asp-controller="User" asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"> </div>

                    
                    <div class="form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input type="password" class="form-control" asp-for="CurrentPassword" placeholder="Please enter your current password." />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input type="password" class="form-control" asp-for="NewPassword" placeholder="Please enter a new password." />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmNewPassword"></label>
                        <input type="password" class="form-control" asp-for="ConfirmNewPassword" placeholder="Please confirm your new  password." />
                        <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span> Save </button>
                        <a class="btn btn-danger btn-block" asp-area="Admin" asp-controller="User" asp-action="Index"> <span class="fas fa-times"></span>Cancel</a>
                    </div>


                </form>
            </div>
    </div>

</div>
</div>